<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dat153.nameapp.RegisterAppOwnerActivity">

    <TextView
        android:id="@+id/AddAppOwnerTextView"
        android:layout_width="123dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:labelFor="@id/ownerNameEditTextField"
        android:text="@string/mandatory_field"
        app:layout_constraintBottom_toTopOf="@+id/ownerNameEditTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ownerNameEditTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="@string/default_value_app_owner_name" />

    <ImageView
        android:id="@+id/ImgPreviewOwner"
        android:layout_width="145dp"
        android:layout_height="147dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="166dp"
        android:layout_marginStart="73dp"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@+id/takePictureButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/takePictureButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="330dp"
        android:contentDescription="@string/button"
        android:onClick="OnClickedTakePictureButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/AddAppOwnerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/AddAppOwnerButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="@color/accent_material_light_1"
        android:contentDescription="@string/button"
        android:text="@string/add_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerNameEditTextField" />




</android.support.constraint.ConstraintLayout>
